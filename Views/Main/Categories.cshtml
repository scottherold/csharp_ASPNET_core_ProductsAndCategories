@model ProductCategoryBundle
<!-- Insert Model Here -->
<div class="row justify-content-center">
    <div class="col-lg-10 rounded justify-content-center m-4 bg-white text-center">
        <h1 class="mt-4 mb-5">Categories</h1>
        <div class="row justify-content-center m-3">
            <div class="col-6 border-right text-center">
                <h3 class="mb-4">New Category</h3>
                <form asp-action="CreateCategory" asp-controller="Main" method="POST">
                    <div class="form-row my-1 justify-content-center">
                        <div class="col-6 text-center">
                            <label asp-for="Category.Name"><h5>Name</h5></label>
                            <input class="w-100 mt-1 mb-3" asp-for="Category.Name">
                            <p><span asp-validation-for="Category.Name" class="text-danger"></span></p>
                            <button type="submit" class="btn btn-primary mt-2">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-6 border-left text-center">
                <h3 class="mb-4">Existing Categories</h3>
                <div class="form-row m-1">
                    <table class="table table-borderless table-hover">
                        <tbody>
                            @if(Model.CategoriesList == null)
                            {

                            }
                            else
                            {
                                @foreach(var category in Model.CategoriesList)
                                {
                                    <tr>
                                        <td><a href="/category/@category.CategoryId">@category.Name</a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>