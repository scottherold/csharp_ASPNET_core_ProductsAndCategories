@model ProductCategoryBundle
<!-- Insert Model Here -->
<div class="row justify-content-center">
    <div class="col-lg-10 rounded justify-content-center m-4 bg-white text-center">
        <h1 class="mt-4 mb-5">Products</h1>
        <div class="row justify-content-center m-3">
            <div class="col-6 border-right text-center">
                <h3 class="mb-4">New Product</h3>
                <form asp-action="CreateProduct" asp-controller="Main" method="POST">
                    <div class="form-row m-1">
                        <div class="col-4 text-left">
                            <label asp-for="Product.Name"><h5>Name</h5></label>
                        </div>
                        <div class="col-6">
                            <input class="w-100" asp-for="Product.Name">
                            <p><span asp-validation-for="Product.Name" class="text-danger"></span></p>
                        </div>
                    </div>
                    <div class="form-row m-1">
                        <div class="col-4 text-left">
                            <label asp-for="Product.Description"><h5>Description</h5></label>
                        </div>
                        <div class="col-6">
                            <textarea asp-for="Product.Description" rows="3" class="w-100"></textarea>
                            <p><span asp-validation-for="Product.Description" class="text-danger"></span></p>
                        </div>
                    </div>
                    <div class="form-row m-1">
                        <div class="col-4 text-left">
                            <label asp-for="Product.Price"><h5>Price</h5></label>
                        </div>
                        <div class="col-6">
                            <input class="w-100" asp-for="Product.Price">
                            <p><span asp-validation-for="Product.Price" class="text-danger"></span></p>
                        </div>
                    </div>
                    <div class="form-row mt-2 mb-4 justify-content-center">
                        <button type="submit" class="btn btn-primary mt-2">Submit</button>
                    </div>
                </form>
            </div>
            <div class="col-6 border-left text-center">
                <h3 class="mb-4">Existing Products</h3>
                <div class="form-row m-1">
                    <table class="table table-borderless table-hover">
                        <tbody>
                            @if(Model.ProductsList == null)
                            {

                            }
                            else
                            {
                                @foreach(var product in Model.ProductsList)
                                {
                                    <tr>
                                        <td><a href="/product/@product.ProductId">@product.Name</a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>